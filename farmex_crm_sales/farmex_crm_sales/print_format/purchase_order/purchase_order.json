 "css": "body{\n    color:#111!important;\n}\ntable th{\n    color:#111!important;\n}\n.print-format td, .print-format th {\n    padding:5px!important;\n}\n.item_table thead th,.item_table thead td,.item_table tbody td{\n    border:1px solid #111!important;\n}\n.order_details td{\n    font-size:14px!important;\n}\n.label{\n    display:block!important;\n    font-weight:bold;\n    border:none;\n}",
