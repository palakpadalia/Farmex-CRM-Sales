 "css": "body{\n    color:#111!important;\n}\ntable{\n    font-size:14px!important;\n}\ntable th{\n    color:#111!important;\n}\n.item_table td{\n    padding:7px!important;\n}\n.item_table tbody th{\n    font-weight:bold!important;\n}\n.item_table thead th,.item_table thead td,.item_table tbody td{\n    border:1px solid #111!important;\n}\n.order_details td{\n    font-size:14px!important;\n}\n.label{\n    display:block!important;\n    font-weight:bold;\n    border:none;\n}\n\n\n\n\n\n\n@media print {\n    .print-format {\n        margin-top:-10mm;\n    }\n   \n}",
